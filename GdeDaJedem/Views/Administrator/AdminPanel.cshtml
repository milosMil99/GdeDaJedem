<link href="~/lib/font-awesome/css/all.css" rel="stylesheet" />
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
<link href="@Url.Content("~/Content/AdminPanel1.css")" rel="stylesheet" type="text/css" />
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
@{
    ViewBag.Title = "AdminPanel";
    
}

<h2>Admin panel</h2>




<div class="row">
    <div class="col-md-4">
        @Html.ActionLink("Unos restorana", "CreateRestoran", "Administrator", "", new { @class = "form-control adminRad" }) <br />
        <button id="manipulacijaRestorana" onclick="man()" class="form-control adminRad">Manipulisi restoranima</button><br />
        <button id="brisanjeKorisnika" onclick="del()" class="form-control adminRad">Birsanje korisnika</button><br />
        <button id="brisanjeKomentara" onclick="delKom()" class="form-control adminRad">Brisanje komentara</button>
    </div>


    <div class="col-md-8">

        <div id="unos" style="display: none">

            @*@Html.RednerPartial("CreateRestoran", new { model = ViewBag.opstine});*@
        </div>

        <div id="man" style="display: none">
            <input type="text" id="id" placeholder="">
            <input type="submit" id="pronadji" value="Izvrsi Update">
            <input type="submit" id="pronadji2" value="Izvrsi Delete">
            @Html.Partial("ListaRestorana")

        </div>

        <div id="manDeleteKorisnik" style="display: none">
            <input type="text" id="user" name="id" placeholder="">
            <input type="submit" id="brisi" value="Obrisi korisnika">
        </div>



        <div id="delK" style="display: none">
            <p>Prvo pronadjite restoran za brisanje komentara</p>

            <input type="text" id="user1" name="id" placeholder="Unesite sifra restorana">
            <input type="submit" id="find" value="Pronadji">

        </div>

    </div>

    <br /><br /><br />
    @Html.ActionLink("Pocetna strana", "Index", "Home")
</div>
@section Scripts{
    @Scripts.Render("~/bundles/jqueryval");
}
<script>


    document.getElementById('pronadji').onclick = function () {
        var sifra = document.getElementById("id").value;
        window.location.href = "../Administrator/UpdateRestoran/" + sifra;
    }

    document.getElementById('pronadji2').onclick = function () {
        var sifra = document.getElementById("id").value;
        window.location.href = "../Administrator/DeleteRestoran/" + sifra;
    }

    document.getElementById('brisi').onclick = function () {
        var user = document.getElementById("user").value;
        window.location.href = "../Administrator/DeleteKorisnik/" + user;
    }

    document.getElementById('find').onclick = function () {
        var user = document.getElementById("user1").value;
        window.location.href = "../Administrator/PrikazKomentara/" + user;
    }


    $(document).ready(function () {
        if (window.location.href.indexOf("CreateRestoran") > -1) {
            document.getElementById("unos").style.display = "block";
        }
    });

    

    function unos() {
        if (document.getElementById("unos").style.display == "none") {
            document.getElementById("unos").style.display = "block";
        }
        else {
            document.getElementById("unos").style.display = "none";
        }

    }

    function man() {
        if (document.getElementById("man").style.display == "none") {
            document.getElementById("man").style.display = "block";
        }
        else {
            document.getElementById("man").style.display = "none";
        }

    }

    function del() {
        if (document.getElementById("manDeleteKorisnik").style.display == "none") {
            document.getElementById("manDeleteKorisnik").style.display = "block";
        }
        else {
            document.getElementById("manDeleteKorisnik").style.display = "none";
        }

    }

    function delKom() {
        if (document.getElementById("delK").style.display == "none") {
            document.getElementById("delK").style.display = "block";
        }
        else {
            document.getElementById("delK").style.display = "none";
        }

    }

</script>