<div class="row">
    <div class="col-md-3 divFilteri">
        <div class="affix1" data-spy="affix1">
            <h5>Filteri</h5>
            <hr />
            <div>
                @using (Html.BeginForm("SviRestorani", "Restoran", FormMethod.Get))
                {
                    foreach (var tip in ViewBag.Tipovi)
                    {


                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="@tip.Naziv" name="tipovi">
                            <label class="form-check-label" for="@tip.Naziv">
                                &nbsp; &nbsp; @tip.Naziv
                            </label>
                        </div>


                    }
                    <button type="submit" class="btn" onclick="prikaziFiltere()"> <i class="fas fa-check"></i>Primeni filtere</button>
                }
            </div>
        </div>

    </div>
    <div class="col-md-9">

        @foreach (var restoran in Model)
        {
            int i = 0;
        <a href="Index/@restoran.restoranID" id="restoran">

            <div class="row prikazRestorana">
                <div class="col-12 col-md-4 divSlikaRest">
                    <img src="~/@restoran.Slika" class="img-responsive restoranSlika" />

                </div>
                <div class="col-6 col-md-4 tekst">
                    <h4> <b> @Html.DisplayFor(model => restoran.Naziv)</b></h4>
                    <br />
                    <p>
                        @foreach (var tip in restoran.Tipovi)
                        {

                            if (i == 0)
                            {
                                @(tip.Naziv);
                            }
                            else
                            {
                                @("/" +  tip.Naziv);
                            }

                            i++;
                        }
                    </p>
                    <br />
                    <p><i class="fas fa-map-marker-alt"></i>@(" "+restoran.Adresa)</p>
                </div>
                <div class="col-6 col-md-4 ocena">
                    <br /> <br />
                    <i class="fas fa-phone fa-lg"></i>@restoran.Telefon
                </div>
            </div>
        </a>
        }

    </div>
</div>


