@model GdeDaJedem.Domain.KorisnikBO

@using (Html.BeginForm("Login", "Korisnik", FormMethod.Post))
{
@Html.ValidationSummary(true, "", new { @class = "text-danger" })

<label for="user">Username</label>
<input type="text" id="user" name="user" class="form-control" placeholder="Username">
<br />
<label for="pass">Password</label>
<input type="password" id="pass" class="form-control" name="pass" placeholder="Password">
<br />
@Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })

<input type="submit" name="login" id="lgoin" class="form-control" value="Uloguj se" />
<br />
}

@Html.ActionLink("Registruj se", "CreateKorisnik","Korisnik")


